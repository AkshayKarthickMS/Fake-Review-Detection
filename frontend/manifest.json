{
  "name": "Detector - Akshay",
  "manifest_version": 3,
  "version": "1.0",
  "description": "Anti-fraud extension that protects you from phishing sites and verifies reviews and news sources",
  "permissions": ["tabs", "activeTab", "contextMenus", "notifications", "storage"],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png",
    "default_title": "Detector - Akshay"
  }
}
